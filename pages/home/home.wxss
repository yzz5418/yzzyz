/* pages/home/home.wxss */
.container {
  padding: 20px;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.time-greeting {
  font-size: 16px;
  color: #666;
}

.username {
  font-size: 24px;
  font-weight: 500;
  color: #333;
}

.settings-btn {
  font-size: 20px;
  color: #666;
}

.stats-container {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 15px;
  margin-bottom: 25px;
}

.stats-card {
  background-color: white;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.checkins-card {
  border-top: 3px solid #1677ff;
}

.duration-card {
  border-top: 3px solid #ff4d4f;
}

.streak-card {
  border-top: 3px solid #36cfc9;
}

.card-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.card-value {
  font-size: 24px;
  font-weight: 500;
  color: #333;
}

.card-unit {
  font-size: 12px;
  color: #999;
}

.today-status {
  background-color: white;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 25px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  font-size: 28px;
  margin-bottom: 8px;
}

.status-text {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 5px;
}

.status-detail {
  font-size: 14px;
  color: #666;
}

.quick-checkin {
  background-color: white;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 25px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 15px;
}

.checkin-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
  margin-bottom: 15px;
}

.option-btn {
  background-color: #f5f5f5;
  border-radius: 10px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.option-btn:hover {
  background-color: #e6f7ff;
  transform: translateY(-2px);
}

.option-btn i {
  font-size: 24px;
  margin-bottom: 8px;
}

.option-btn text {
  font-size: 14px;
  color: #333;
}

.custom-option {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1677ff;
  font-size: 14px;
}

.custom-option i {
  margin-left: 5px;
}

.recent-records {
  background-color: white;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.view-all {
  color: #1677ff;
  font-size: 14px;
  display: flex;
  align-items: center;
}

.view-all i {
  margin-left: 5px;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.record-item {
  padding: 12px;
  border-radius: 10px;
  border: 1px solid #f0f0f0;
  transition: all 0.3s;
}

.record-item:hover {
  border-color: #1677ff;
  transform: translateY(-1px);
}

.record-date {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.date {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 12px;
  color: #999;
}

.record-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-type {
  display: flex;
  align-items: center;
}

.record-dot {
  font-size: 8px;
  margin-right: 5px;
}

.type-name {
  font-size: 14px;
  color: #333;
}

.record-duration {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 14px;
}

.record-duration i {
  margin-right: 5px;
}

.empty-records {
  text-align: center;
  padding: 20px 0;
  color: #999;
  font-size: 14px;
}