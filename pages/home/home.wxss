/* pages/home/home.wxss */
.container {
    padding: 20rpx;
  }
  
  .course-promotion {
      display: flex;
      border: 1px solid #e5e5e5;
      border-radius: 10rpx;
      overflow: hidden;
      margin-bottom: 20rpx;
  }
  
  .course-promotion image {
      width: 300rpx;
      height: 200rpx;
  }
  
  .course-info {
      padding: 20rpx;
      flex: 1;
  }
  
  .course-title {
      font-size: 32rpx;
      font-weight: bold;
      margin-bottom: 10rpx;
  }
  
  .course-desc {
      font-size: 24rpx;
      color: #666;
      margin-bottom: 20rpx;
  }
  
  .pay-btn {
      background-color: #007aff;
      color: white;
      padding: 10rpx 20rpx;
      border-radius: 5rpx;
      text-align: center;
  }
  
  .section-title {
      font-size: 32rpx;
      font-weight: bold;
      margin-bottom: 20rpx;
  }
  
  .course-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
  }
  
  .course-item {
      width: 48%;
      border: 1px solid #e5e5e5;
      border-radius: 10rpx;
      overflow: hidden;
      margin-bottom: 20rpx;
  }
  
  .course-item image {
      width: 100%;
      height: 200rpx;
  }
  
  .course-item-info {
      padding: 20rpx;
  }
  
  .course-item-title {
      font-size: 28rpx;
      font-weight: bold;
      margin-bottom: 10rpx;
  }
  
  .course-item-price {
      font-size: 24rpx;
      color: #007aff;
      margin-bottom: 20rpx;
  }
      