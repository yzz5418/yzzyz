/* pages/login/login.wxss */
.container {
  padding: 50rpx 30rpx;
}

.logo-container {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 60rpx;
}

.logo-container image {
  width: 100%;
  height: 100%;
}

.form-container {
  padding: 0 20rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}

.placeholder-style {
  color: #999;
}

.error-message {
  color: #f00;
  font-size: 26rpx;
  margin: 20rpx 0;
  text-align: center;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #009688;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

.link-container {
  text-align: center;
  margin-top: 30rpx;
}

.link-container text {
  color: #009688;
  font-size: 28rpx;
}