/* 设置全局字体和背景颜色 */
page {
  font-family: 'Inter', sans-serif;
  background-color: #f9fafb;
  color: #374151;
  line-height: 1.5;
}

/* 容器样式，增加内边距和圆角，添加阴影效果 */
.container {
  padding: 2rem;
  border-radius: 0.5rem;
  background-color: #ffffff;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  margin: 2rem auto;
  max-width: 40rem;
}

/* 输入项样式，增加底部外边距 */
.input-item {
  margin-bottom: 1.5rem;
}

/* 标签样式，设置为块级元素，增加底部外边距 */
.input-item label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: #1f2937;
}

/* 输入框样式，增加内边距、圆角和边框颜色，添加过渡效果 */
.input-item input {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 1px solid #d1d5db;
  border-radius: 0.375rem;
  background-color: #f9fafb;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

/* 输入框聚焦样式，改变边框颜色和添加阴影 */
.input-item input:focus {
  outline: none;
  border-color: #009688;
  box-shadow: 0 0 0 3px rgba(0, 150, 136, 0.2);
}

/* 选择器样式，增加内边距、圆角和边框颜色，添加过渡效果 */
.picker {
  padding: 0.75rem 1rem;
  border: 1px solid #d1d5db;
  border-radius: 0.375rem;
  background-color: #f9fafb;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
}

/* 选择器聚焦样式，改变边框颜色和添加阴影 */
.picker:focus {
  outline: none;
  border-color: #009688;
  box-shadow: 0 0 0 3px rgba(0, 150, 136, 0.2);
}

/* 按钮样式，增加内边距、圆角和背景颜色，添加过渡效果 */
button {
  width: 100%;
  padding: 0.75rem 1rem;
  background-color: #009688;
  color: #ffffff;
  border: none;
  border-radius: 0.375rem;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

/* 按钮悬停样式，改变背景颜色 */
button:hover {
  background-color: #00796b;
}

/* 按钮聚焦样式，添加阴影 */
button:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(0, 150, 136, 0.2);
}
    